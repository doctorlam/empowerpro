<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_area :name, id: :course_name %>
  </div>
   <h3>Add Lessons</h3>
    <%= form.nested_fields_for :lessons do |lesson| %>
      <%= lesson.text_field :name %>
      <%= lesson.text_area :content %>
      <%= lesson.remove_nested_fields_link %>
    <% end %>
      <%= form.add_nested_fields_link :lessons %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
