<!DOCTYPE html>
<html>
  <head>
    <title>Empowerpro</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  	<header>
  		<nav class="navbar navbar-inverse bg-inverse">
          <a class="navbar-brand" href="#">EmpowerPro</a>

  			 <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %> 
            <% if  current_user.role?("user") %>
                    <li class="nav-item"><%= link_to 'User Dashboard', user_profiles_path %></li>
      
            <% elsif current_user.admin? %>
                <li class="nav-item"><%= link_to 'Admin Panel', adminpanel_path %></li>

            <% else %>
                <li class="nav-item"><%= link_to 'Sponsor Profile', sponsor_profiles_path %></li>
                <li class="nav-item"><%= link_to 'User Directory', userlist_path %></li>
            <% end %>
                    <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li class="nav-item">
          <% else %>
                <li class="nav-item"><%= link_to "Register", new_user_registration_path %></li>
                <li class="nav-item"><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
      </ul>
  		</nav>
  	</header>
     <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<% if flash[:notice] %>
    <div class ="alert alert-success"><%= flash[:notice] %></div>
  <% end %>

    <%= yield %>
  </body>
</html>
